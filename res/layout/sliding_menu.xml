<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@color/menu_background">

    <Switch android:id="@+id/imagesSwitch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_imagesSwitch"
            android:textColor="@color/menu_text"
            android:padding="10dp"
            android:layout_alignParentTop="true"
            android:onClick="onSwitchClicked"
            android:thumb="@drawable/switch_inner"
            android:track="@drawable/switch_track"/>

    <View android:id="@+id/separator1"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"
          android:layout_below="@id/imagesSwitch"/>

    <Switch android:id="@+id/cacheSwitch"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_cacheSwitch"
            android:textColor="@color/menu_text"
            android:padding="10dp"
            android:layout_below="@id/separator1"
            android:onClick="onSwitchClicked"
            android:thumb="@drawable/switch_inner"
            android:track="@drawable/switch_track"/>

    <View android:id="@+id/separator2"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@android:color/darker_gray"
          android:layout_below="@id/cacheSwitch"/>

    <Button android:id="@+id/aboutItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu_aboutItem"
            android:textColor="@color/menu_text"
            android:background="@color/menu_background"
            android:layout_alignParentBottom="true"/>

    <View android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:background="@color/menu_text"
          android:layout_above="@id/aboutItem"/>

</RelativeLayout>