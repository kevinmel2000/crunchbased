buildscript {
    repositories {
        mavenCentral()
    }

    dependencies {
        classpath 'com.android.tools.build:gradle:0.5.6'
    }
}

apply plugin: 'android'


dependencies {
    compile files('libs/android-support-v4.jar')
    compile "com.google.android:android:4.0.1.2"
    provided "com.google.android:support-v4:r7"
    compile "com.googlecode.androidannotations:androidannotations:2.7.1"
    compile "com.googlecode.androidannotations:androidannotations-api:2.7.1"
    compile "com.nostra13.universalimageloader:universal-image-loader:1.8.6"
    compile "com.google.code.gson:gson:2.2.4"
    compile "org.jsoup:jsoup:1.7.2"
    compile "org.apache.commons:commons-lang3:3.1"
    compile "com.google.guava:guava:14.0.1"
    compile "org.projectlombok:lombok:0.12.0"
}

android {
    buildToolsVersion "17.0"
    compileSdkVersion 17

    sourceSets {
        main {
            manifest.srcFile 'AndroidManifest.xml'
            java.srcDirs = ['src']
            resources.srcDirs = ['src']
            aild.srcDirs = ['src']
            renderscript.srcDirs = ['src']
            res.srcDirs = ['res']
            assets.srcDirs = ['assets']
        }

        instrumentTest.setRoot('tests')
    }
}