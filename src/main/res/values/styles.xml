<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.CrunchBase" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.CrunchBase</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.CrunchBase</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.CrunchBase</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.CrunchBase</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.CrunchBase</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.CrunchBase</item>
        <item name="android:actionBarWidgetTheme">@style/Theme.CrunchBase.Widget</item>
        <item name="android:listViewStyle">@style/ListView.CrunchBase</item>
        <item name="android:listViewWhiteStyle">@style/ListView.White.CrunchBase</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem.CrunchBase</item>
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_selector</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
        <item name="android:editTextStyle">@style/EditText.CrunchBase</item>
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextView.CrunchBase</item>
        <item name="android:checkboxStyle">@style/CheckBox.CrunchBase</item>
        <item name="android:radioButtonStyle">@style/RadioButton.CrunchBase</item>
        <item name="android:buttonStyle">@style/Button.CrunchBase</item>
        <item name="android:imageButtonStyle">@style/ImageButton.CrunchBase</item>
        <item name="android:spinnerStyle">@style/Spinner.CrunchBase</item>
        <item name="android:dropDownSpinnerStyle">@style/Spinner.CrunchBase.DropDown</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem.CrunchBase</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBar.CrunchBase</item>
    </style>

    <style name="ActionBar.Solid.CrunchBase" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid</item>
        <item name="android:progressBarStyle">@style/ProgressBar.CrunchBase</item>
    </style>

    <style name="ActionBar.Transparent.CrunchBase" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent</item>
        <item name="android:progressBarStyle">@style/ProgressBar.CrunchBase</item>
    </style>

    <style name="PopupMenu.CrunchBase" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="DropDownListView.CrunchBase" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>

    <style name="ActionBarTabStyle.CrunchBase" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab</item>
    </style>

    <style name="DropDownNav.CrunchBase" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
        <item name="android:dropDownSelector">@drawable/selectable_background</item>
    </style>

    <style name="ProgressBar.CrunchBase" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>

    <style name="ActionButton.CloseMode.CrunchBase" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done</item>
    </style>

    <style name="Theme.CrunchBase.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.CrunchBase</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.CrunchBase</item>
    </style>

    <style name="ListView.CrunchBase" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <style name="ListView.White.CrunchBase" parent="android:Widget.ListView.White">
        <item name="android:listSelector">@drawable/list_selector</item>
    </style>

    <style name="SpinnerItem.CrunchBase" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="EditText.CrunchBase" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AutoCompleteTextView.CrunchBase" parent="android:Widget.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/list_selector</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CheckBox.CrunchBase" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check</item>
    </style>

    <style name="RadioButton.CrunchBase" parent="android:Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio</item>
    </style>

    <style name="Button.CrunchBase" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ImageButton.CrunchBase" parent="android:Widget.ImageButton">
        <item name="android:background">@drawable/btn_default</item>
    </style>

    <style name="Spinner.CrunchBase" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:dropDownSelector">@drawable/list_selector</item>
    </style>

    <style name="Spinner.CrunchBase.DropDown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerDropDownItem.CrunchBase" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@drawable/btn_radio</item>
    </style>

</resources>